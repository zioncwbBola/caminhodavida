datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  createdAt DateTime @default(now())
}
model UserLgpd {
  id        String   @id @default(cuid()) // Identificador único
  name      String?  // Nome do usuário
  email     String   @unique // Email único do usuário
  consent   Boolean  @default(false) // Registro de consentimento do usuário
  createdAt DateTime @default(now()) // Data de criação do registro
  updatedAt DateTime @updatedAt // Data de última atualização
  deletedAt DateTime? // Soft delete: data de exclusão lógica
}